<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="38.0" layoutY="27.0" text="Calculate Sum">
         <font>
            <Font name="Arial Black" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="39.0" layoutY="65.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="39.0" layoutY="105.0" promptText="Second Number" />
      <Button fx:id="btSum" layoutX="38.0" layoutY="150.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
      </Button>
      <Label layoutX="38.0" layoutY="191.0" text="Result =">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="114.0" layoutY="194.0" />
   </children>
</AnchorPane>
